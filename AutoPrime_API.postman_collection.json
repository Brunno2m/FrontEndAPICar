{
  "info": {
    "name": "AutoPrime Backend API",
    "description": "Coleção completa de endpoints para o sistema AutoPrime",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Teste - Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/teste",
          "host": ["{{base_url}}"],
          "path": ["teste"]
        },
        "description": "Verifica se o sistema está funcionando"
      }
    },
    {
      "name": "2. Listar Todos os Carros",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/listarCarros",
          "host": ["{{base_url}}"],
          "path": ["listarCarros"]
        },
        "description": "Retorna lista completa de carros cadastrados"
      }
    },
    {
      "name": "3. Salvar Carro - BWM",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"BWM\",\n  \"preco\": 350000\n}"
        },
        "url": {
          "raw": "{{base_url}}/saveCarro",
          "host": ["{{base_url}}"],
          "path": ["saveCarro"]
        },
        "description": "Cadastra um novo carro BWM com preço R$ 350.000"
      }
    },
    {
      "name": "4. Salvar Carro - Mercedes",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"Mercedes\",\n  \"preco\": 420000\n}"
        },
        "url": {
          "raw": "{{base_url}}/saveCarro",
          "host": ["{{base_url}}"],
          "path": ["saveCarro"]
        },
        "description": "Cadastra um novo carro Mercedes com preço R$ 420.000"
      }
    },
    {
      "name": "5. Buscar Carro - BWM",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"BWM\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/getCarro",
          "host": ["{{base_url}}"],
          "path": ["getCarro"]
        },
        "description": "Busca o preço do carro BWM"
      }
    },
    {
      "name": "6. Atualizar Preço - BWM",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"BWM\",\n  \"preco\": 375000\n}"
        },
        "url": {
          "raw": "{{base_url}}/updateCarro",
          "host": ["{{base_url}}"],
          "path": ["updateCarro"]
        },
        "description": "Atualiza o preço do BWM para R$ 375.000"
      }
    },
    {
      "name": "7. Deletar Carro - Mercedes",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"Mercedes\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/deleteCarro",
          "host": ["{{base_url}}"],
          "path": ["deleteCarro"]
        },
        "description": "Remove o carro Mercedes do sistema"
      }
    },
    {
      "name": "Frontend - Listar Carros",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/listarCarros",
          "host": ["{{base_url}}"],
          "path": ["api", "listarCarros"]
        },
        "description": "Endpoint usado pelo frontend para listar carros"
      }
    },
    {
      "name": "Frontend - Buscar Carro",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"modelo\": \"BWM\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/getCarro",
          "host": ["{{base_url}}"],
          "path": ["api", "getCarro"]
        },
        "description": "Endpoint usado pelo frontend para buscar carro (retorna array)"
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Verifica se o servidor está respondendo"
      }
    }
  ]
}
